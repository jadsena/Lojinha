@model Lojinha.Core.Models.Carrinho
@{ 
    ViewData["Title"] = "Finalizar";
}
<div class="row">
    <h3>Pedido recebido com sucesso: @Guid.NewGuid()</h3>
    <ul>
        @foreach(var item in Model.Items)
        {
            <li>@item.Produto.Nome <small>@item.Quantidade</small></li>
        }
    </ul>
    <div>Total: R$ @Model.Items.Sum(x => x.Produto.Preco * x.Quantidade)</div>
</div>